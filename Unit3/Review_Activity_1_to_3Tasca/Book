import java.util.*;

public class Book implements Comparable<Book>{
    private int isbn;
    private String titulo;
    private String autor;
    ArrayList<String> listaGeneros= new ArrayList<String>();

    public Book(int isbn, String titulo, String autor, ArrayList<String> listaGeneros) {
        this.isbn = isbn;
        this.titulo = titulo;
        this.autor = autor;
        this.listaGeneros = listaGeneros;
    }

    public int getIsbn() {
        return isbn;
    }

    public String getTitulo() {
        return titulo;
    }

    public String getAutor() {
        return autor;
    }

    public ArrayList<String> getListaGeneros() {
        return listaGeneros;
    }

    @Override
    public String toString() {
        return "Book{" +
                "ISBN='" + isbn + '\'' +
                ", titulo='" + titulo + '\'' +
                ", autor='" + autor + '\'' +
                ", listaGeneros=" + listaGeneros +
                '}';
    }

    /**
     * Comparación con el título, autor e ISBN
     * @param o the object to be compared.
     * @return
     */
    @Override
    public int compareTo(Book o) {
        int tituloDiff = this.titulo.compareToIgnoreCase(o.titulo);
        int autorDiff = this.autor.compareToIgnoreCase(o.autor);
        int isbnDiff = this.isbn - o.isbn;

        if (tituloDiff != 0) {
            return tituloDiff;
        }
        if (autorDiff != 0) {
            return autorDiff;
        }
        return this.isbn - o.isbn;
    }
}
