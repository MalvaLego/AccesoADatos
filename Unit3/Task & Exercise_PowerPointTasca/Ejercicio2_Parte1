import java.io.*;
import java.util.*;

public class Ejer2 {
    public static void main(String[] args) throws IOException {

        program();
    }

    private static void program() {
        Scanner sc= new Scanner(System.in);
        int number=0;

        try (DataOutputStream din = new DataOutputStream(new FileOutputStream("C:\\Users\\Natalia Coronado\\Documents\\datos.dat"))) {
            while (number!=-1){
                System.out.println("Introduzca número: ");
                try{
                    number=sc.nextInt();
                }catch (InputMismatchException e) {
                    System.out.println("Tiene que ser un número entero");
                    sc.nextLine();
                    continue;
                }
                catch (Exception e){
                    System.out.println("Error en la comanda");
                    continue;
                }
                if (number!=-1) {
                    din.writeInt(number);
                }
            }

        } catch (FileNotFoundException e) {
            System.out.println("No encuentra archivo");
        } catch (Exception e) {
            System.out.println("ERROR");
        }
    }


}
