import java.io.*;
import java.util.*;

public class Ejer1 {
    public static void main(String[] args) {

        saveFichero();
        ArrayList<String> list=readFichero();
        printArray(list);
    }

    private static void saveFichero(){
        try (DataOutputStream din = new DataOutputStream(new FileOutputStream("C:\\Users\\Natalia Coronado\\Documents\\info.dat"))) {
            din.writeUTF("Say My Name");
        } catch (FileNotFoundException e) {
            System.out.println("No encuentra archivo");
        } catch (Exception e) {
            System.out.println("ERROR");
        }
    }

    private static ArrayList<String> readFichero(){
        ArrayList<String> list=new ArrayList<String>();

        try (DataInputStream din = new DataInputStream(new FileInputStream("C:\\Users\\Natalia Coronado\\Documents\\info.dat"))) {
            String word=din.readUTF();
            list.add(word);

        } catch (FileNotFoundException e) {
            System.out.println("No encuentra archivo");
        } catch (Exception e) {
            System.out.println("ERROR");
        }
        return list;
    }

    private static void printArray(ArrayList<String> list){

        for (String word: list){
            System.out.print(word);
        }

    }
    
}
