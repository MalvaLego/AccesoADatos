import java.io.*;

public class EjA {
    public static void main(String[] args) throws IOException {

        File fichero= new File("C:\\Users\\Natalia Coronado\\Documents\\ficheroW.csv");
        if (fichero.exists()){
            System.out.println("SI");
        }else{
            System.out.println("NO");
        }

        escribir(fichero);

    }

    private static void escribir(File fichero) throws IOException {
        try (FileWriter fw = new FileWriter(fichero)){
            fw.write("NIA;NOMBRE;DIRECCIÃ“N");
        } catch (Exception e) {
            throw new RuntimeException(e);
        }

    }


}
