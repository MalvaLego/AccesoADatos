package org.example;

import java.sql.ResultSet;

public class Main {
    public static void main(String[] args) {

        ConnectDB connectDB= new ConnectDB();
        connectDB.connectDB();
        // ---Mostrar las 50 primeras pel√≠culas
        connectDB.getShowFilmInfo();
        // ---Mostrar la tabla actor
        connectDB.getShowActorInfo();
        // ---Mostrar la tabla film utilizando ResultSet
        ResultSet films= connectDB.getFilmInfo();
        connectDB.showFilmInfo(films);
        // ---Mostrar la tabla actor utilizando ResultSet
        ResultSet actors= connectDB.getActorInfo();
        connectDB.showActorInfo(actors);

        connectDB.closeConnection();
    }
}
